{
	"overrides": [
		{
			"files": ["*.html", "src/**/*.js", "src/**/*.scss"],
			"options": {
				"tabWidth": 4,
				"semi": false,
				"useTabs": true,
				"singleQuote": true
			}
		},
		{
			"files": "src/assets/js/*.js",
			"options": {
				"trailingComma": "es5",
				"semi": true
			}
		},
		{
			"files": ["*.html"],
			"options": {
				"tabWidth": 4
			}
		},
		{
			"files": ["src/**/*.scss"],
			"options": {
				"tabWidth": 4
			}
		}
	]
}
