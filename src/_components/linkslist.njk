<div class="row">
	<div class="column large-12">
		<div class="section_d2d_test">
			<h1 class="h2 spacing-medium">link list</h1>
			<div class="row">
				{% for post in linkslist %}
					<div class="column medium-6 large-4 huge-3 sameHeight">
						<div class="section_d2d_test__box_container rad-shadow">
							<div class="section_d2d_test__box {% if post.data.highlight == true %}section_d2d_test__box--reverse{% endif %} ">
								<div class="section_d2d_test__box_image">
									<!-- <img src="{{ post.data.featuredImage | url }}" alt="{{ post.data.featuredImage }}"> -->
								</div>
								<div class="section_d2d_test__box_content">
									<div class="h5">{{ post.data.title2 }}</div>
									<div class="h3">
										{{ post.data.title }}
									</div>
									<p class="p-large">
										{{ post.data.description }}
									</p>
								</div>
								<div class="section_d2d_test__box_content_footer section_d2d_test__box_content_footer--postlist">
									<a class="button-post button-post" href="{{ post.url | url}}">
										read more
										<span>
											<span>read more</span>
										</span>
									</a>
									{% for tag in post.data.tags %}
										{% if tag == "posts" %}
										{% else %}
										{% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
											<a href="{{ tagUrl | url }}" class="button-tags">{{ tag }}<span>{{ tag }}</span></a>
										{% endif %}
									{% endfor %}
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>
